<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="dev.adryanev.dicoding.moviejetpack.ui.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="dev.adryanev.dicoding.moviejetpack.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/detailMovieFragment"
        android:name="dev.adryanev.dicoding.moviejetpack.ui.detailmovie.DetailMovieFragment"
        android:label="DetailMovieFragment"
        tools:layout="@layout/fragment_detail_movie" >
        <argument
            android:name="movie"
            app:argType="dev.adryanev.dicoding.moviejetpack.data.entities.Movie"
            />
    </fragment>
    <action
        android:id="@+id/action_global_detailFragment"
        app:destination="@id/detailMovieFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right" />
    <action
        android:id="@+id/action_global_detailTvShowFragment"
        app:destination="@id/detailTvShowFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right" />
    <fragment
        android:id="@+id/movieFragment"
        android:name="dev.adryanev.dicoding.moviejetpack.ui.home.movies.MovieFragment"
        android:label="fragment_movie"
        tools:layout="@layout/fragment_movie" />
    <fragment
        android:id="@+id/tvShowFragment"
        android:name="dev.adryanev.dicoding.moviejetpack.ui.home.tvshows.TvShowFragment"
        android:label="fragment_tv_show"
        tools:layout="@layout/fragment_tv_show" />
    <fragment
        android:id="@+id/detailTvShowFragment"
        android:name="dev.adryanev.dicoding.moviejetpack.ui.detailtvshow.DetailTvShowFragment"
        android:label="DetailTvShowFragment"
        tools:layout="@layout/fragment_detail_tvshow">
        <argument
            android:name="tvShow"
            app:argType="dev.adryanev.dicoding.moviejetpack.data.entities.TvShow"
            />
    </fragment>
</navigation>